<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="css/inventario.css">
</head>
<body>
    <header>
        <%- include('nav'); %>
    </header>
    <div class="container espacio">
      <div class="login-page espacio">
        <h1>Crear Producto</h1>
        <br>
        <form action="/CrearProducto" method="POST" enctype="multipart/form-data" class="form">
          <input type="text" name="Producto" id="Producto" placeholder="Nombre del producto" required>
          <select name="Tipo" id="Tipo" class="form-select form-select-sm" aria-label=".form-select-sm example" required onchange="showFields()">
            <option value="Null">Categoria</option>
            <option value="Llantas">Llantas</option>
            <option value="Aceites">Aceites</option>
            <option value="Repuestos">Repuestos</option>
            <option value="Herramientas">Herramientas</option>
          </select>
          <div id="llantas-fields" class="additional-fields" style="display: none;">
            <select name="Rin" id="Rin" class="form-select form-select-sm" aria-label=".form-select-sm example">
              <option value="Null">Selecciona Tipo de Rin</option>
              <option value="Rin 8">Rin 8</option>
              <option value="Rin 10">Rin 10</option>
              <option value="Rin 12">Rin 12</option>
              <option value="Rin 13">Rin 13</option>
              <option value="Rin 14">Rin 14</option>
              <option value="Rin 15">Rin 15</option>
              <option value="Rin 16">Rin 16</option>
              <option value="Rin 17">Rin 17</option>
              <option value="Rin 18">Rin 18</option>
              <option value="Rin 19">Rin 19</option>
              <option value="Rin 21">Rin 21</option>
            </select>
          </div>
          <div id="aceites-fields" class="additional-fields" style="display: none;">
            <input type="text" name="TipoAceite" id="TipoAceite" placeholder="Tipo de Aceite" required>
            <select name="Viscosidad" id="Viscosidad" class="form-select form-select-sm" aria-label=".form-select-sm example">
              <option value="Null">Viscosidad</option>
              <option value="5W40">5W40</option>
            </select>
          </div>
          <input type="text" name="Marca" id="Marca" placeholder="Marca del Producto" required>
          <input type="number" name="Precio" id="Precio" placeholder="Precio del producto" required>
          <input type="text" name="Descripcion" id="Descripcion" placeholder="Descripcion del producto" required>
          <input type="file" name="Imagen" id="Imagen" accept="image/*" required>
          <button type="submit">Crear</button>
        </form>
      </div>
    </div>
    <div class="container">
      <h2>Inventario</h2>
      <% Llantas.forEach( (Llantas) => { %>
     <div class="card" style="width: 14rem;">
        <img src="img/Productos/<%= Llantas.Imagen %>"  class="card-img-top" alt="Imagen del producto">
        <div class="card-body">
          <h5 class="card-title"><%= Llantas.Producto %></h5>
          <p><strong>Precio:</strong> <%= Llantas.Precio %></p>
          <p class="card-text"><%= Llantas.Descripcion %> </p>
          <a href="/Eliminar/<%= Llantas.id %>" class="btn btn-outline-danger">Eliminar</a>
        </div>
      </div>
   <% }) %>
   <% Aceites.forEach( (Aceites) => { %>
    <div class="card" style="width: 14rem;">
       <img src="img/Productos/<%= Aceites.Imagen %>"  class="card-img-top" alt="Imagen del producto">
       <div class="card-body">
         <h5 class="card-title"><%= Aceites.Producto %></h5>
         <p><strong>Precio:</strong> <%= Aceites.Precio %></p>
         <p class="card-text"><%= Aceites.Descripcion %> </p>
         <a href="/Eliminar/<%= Llantas.id %>" class="btn btn-outline-danger">Eliminar</a>
       </div>
     </div>
  <% }) %>
  <% Herramientas.forEach( (Herramientas) => { %>
    <div class="card" style="width: 14rem;">
       <img src="img/Productos/<%= Herramientas.Imagen %>"  class="card-img-top" alt="Imagen del producto">
       <div class="card-body">
         <h5 class="card-title"><%= Herramientas.Producto %></h5>
         <p><strong>Precio:</strong> <%= Herramientas.Precio %></p>
         <p class="card-text"><%= Herramientas.Descripcion %> </p>
         <a href="/Eliminar/<%= Llantas.id %>" class="btn btn-outline-danger">Eliminar</a>
       </div>
     </div>
  <% }) %>
  <% Repuestos.forEach( (Repuestos) => { %>
    <div class="card" style="width: 14rem;">
       <img src="img/Productos/<%= Repuestos.Imagen %>"  class="card-img-top" alt="Imagen del producto">
       <div class="card-body">
         <h5 class="card-title"><%= Repuestos.Producto %></h5>
         <p><strong>Precio:</strong> <%= Repuestos.Precio %></p>
         <p class="card-text"><%= Repuestos.Descripcion %> </p>
         <a href="/Eliminar/<%= Llantas.id %>" class="btn btn-outline-danger">Eliminar</a>
       </div>
     </div>
  <% }) %>
    </div>
    <br>
    <footer>
   <p>Anfomotos Â© 2024</p>
 </footer>
</body>
<script src="js/inventario.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>