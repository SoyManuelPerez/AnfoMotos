<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="css/inventario.css">
</head>
<body>
    <header>
        <%- include('nav'); %>
    </header>
    <div class="container espacio">
      <div class="login-page espacio">
        <h1>Crear Producto</h1>
        <br>
        <form action="/CrearProducto" method="POST" enctype="multipart/form-data" class="form">
          <input type="text" name="Producto" id="Producto" placeholder="Nombre del producto" required>
          <select name="Tipo" id="Tipo" class="form-select form-select-sm" aria-label=".form-select-sm example" required onchange="showFields()">
            <option value="Null">Categoria</option>
            <option value="Llantas">Llantas</option>
            <option value="Aceites">Aceites</option>
            <option value="Repuestos">Repuestos</option>
            <option value="Herramientas">Herramientas</option>
          </select>
          <input type="number" name="Precio" id="Precio" placeholder="Precio del producto" required>
          <input type="file" name="Imagen" id="Imagen" accept="image/*" required>
          <button type="submit">Crear</button>
        </form>
      </div>
    </div>
    <div class="container">
      <div class="row my-4">
        <div class="col">
          <input type="text" id="searchInput" class="form-control" placeholder="Buscar productos...">
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row" id="productContainer">
        <% Llantas.forEach( (Llanta) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-6 product-card">
            <div class="card mb-3" style="width: 100%;">
              <img src="img/Productos/<%= Llanta.Imagen %>" class="card-img-top" alt="Imagen del producto">
              <div class="card-body">
                <h5 class="card-title"><%= Llanta.Producto %></h5>
                <p class="Precio">$<%= Llanta.Precio.toLocaleString('es-CO') %> COP</p>
                 <a href="/EliminarProducto/<%= Llanta.id %>"><button type="submit" class="btn-agregar btn btn-danger">Eliminar</button></a> 
              </div>
            </div>
          </div>
        <% }) %>
        <% Aceites.forEach( (Aceite) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-6 product-card">
            <div class="card mb-3" style="width: 100%;">
              <img src="img/Productos/<%= Aceite.Imagen %>" class="card-img-top" alt="Imagen del producto">
              <div class="card-body">
                <h5 class="card-title"><%= Aceite.Producto %></h5>
                <p class="Precio">$<%= Aceite.Precio.toLocaleString('es-CO') %> COP</p>
                <a href="/EliminarProducto/<%= Aceite.id %>"><button type="submit" class="btn-agregar btn btn-danger">Eliminar</button></a>
              </div>
            </div>
          </div>
        <% }) %>
        <% Herramientas.forEach( (Herramienta) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-6 product-card">
            <div class="card mb-3" style="width: 100%;">
              <img src="img/Productos/<%= Herramienta.Imagen %>" class="card-img-top" alt="Imagen del producto">
              <div class="card-body">
                <h5 class="card-title"><%= Herramienta.Producto %></h5>
                <p class="Precio">$ <%= Herramienta.Precio.toLocaleString('es-CO') %> COP</p>
                <a href="/EliminarProducto/<%= Herramienta.id %>"><button type="submit" class="btn-agregar btn btn-danger">Eliminar</button></a>
              </div>
            </div>
          </div>
        <% }) %>
        <% Repuestos.forEach( (Repuesto) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-6 product-card">
            <div class="card mb-3" style="width: 100%;">
              <img src="img/Productos/<%= Repuesto.Imagen %>" class="card-img-top" alt="Imagen del producto">
              <div class="card-body">
                <h5 class="card-title"><%= Repuesto.Producto %></h5>
                <p class="Precio">$<%= Repuesto.Precio.toLocaleString('es-CO') %> COP</p>
                <a href="/EliminarProducto/<%= Repuesto.id %>"><button type="submit" class="btn-agregar btn btn-danger">Eliminar</button></a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <div id="noProductMessage" class="text-center mt-4" style="display: none;">
        <h1>Producto no encontrado.</h1>
      </div>
    </div>
    <br>
    <footer>
   <p>Anfomotos Â© 2024</p>
 </footer>
</body>
<script src="js/buscador.js"></script>
<script src="js/actualizado.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>